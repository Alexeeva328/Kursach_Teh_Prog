show.cpp
#include <iostream>
#include <string>
#include "Shop.h"
using namespace std;

void Shop1::Zap1()
{
	FILE *ssh1;
	fopen_s(&ssh1,"file.txt", "a");



	string a;
	cout << "input name a country" << endl;
	cin >> a;
	this->name = a;
	fprintf_s(ssh1, "\n    %s \n",a.c_str());

	cout << "input name a Publishing_house" << endl;
	cin >> a;
	this->Publishing_house = a;
	fprintf_s(ssh1, "%s \n", a.c_str());
	fclose(ssh1);
}

Shop1::Shop1()
{
	cout << "Input name a country: " ; cin >> name;
	cout << "Input Publishing_house:" ; cin >> Publishing_house;
	cout << "Input year:"; cin >> year;
	cout << "Input number of pages in the guidebook:" ; cin >> numbers;
	cout << "Are there any photos? If so, enter it 1, else it's 0:"; cin >> photos;
	cout << "Are there any cards? If so, enter it 1, else it's 0:"; cin >> cards;
	cout << "Input binding (hard or soft):"; cin >> binding;
	cout << "Input format (A2 OR A3 OR A4):"; cin >> format;
	cout << "Input author of the guide:"; cin >> author;
	cout << "The total number of such guides:"; cin >> sum;
	cout << endl;
}

void Shop1::show()
{
	cout << "Name a country  " << name << endl;
	cout << "Publishing_house  " << Publishing_house << endl;
	cout << "Тumber of pages in the guidebook  " << numbers << endl;
	cout << "The presence of photographs, if 1- then there, if 0, then there is no  " << photos << endl;
	cout << "The presence of photographs, if 1- then there, if 0, then there is no  " << cards << endl;
	cout << "Binding  " << binding << endl;
	cout << "Format  " << format << endl;
	cout << "The author of the guide  " << author << endl;
	cout << "The total number of such guides  " << sum << endl;
	cout << endl;

}



show.h
#include <iostream>
#include <string>
#include <fstream>
#pragma warning(disable : 4996)
using namespace std;
class Shop1
{
	string name;
	string Publishing_house;//издательство
	int year;
	int numbers;//число страниц
	bool photos;//наличие фотографий
	bool cards;//наличие карты
	string binding;//переплет(твердый или мягкий)
	string format; //(А2-А4)
	string author;
	int sum;//кол-во

public:	void Zap1();
	Shop1();
	void show();
};

source.cpp
#include <iostream>
#include <conio.h>
#include <string.h> 

#include <cstring>
#include <clocale>
#include <cstdio>

#include "shop.h"
using namespace std;

void main()
{
	//Shop1 sh1;
	//sh1.Zap1();
	int n;
	cout << "Input a number of country: "; cin >> n;
	Shop1 *sh1;
	sh1 = new Shop1[n];

	char f;
	while (1)
	{
		cout << "Choose number menu:\n"
			 << "a-add country\n"
			 << "s-show all guidebook\n"
			 << "q-EXIT"
			 <<endl;
		cin>>f;
		switch (f)
		{
		case 'a':
			cout << "Input a number of country: ";
			cin >> n;
			sh1 = new Shop1[n];
			break;
		case 's':
			cout << "All guidebooks: " << endl;
			for (int i = 0; i < n; i++) {//????
				cout << "==============================:" << endl;
				cout << "\n\n";
				sh1[i].show();
			}
			cout << "\n";
			break;
		case 'd':

			break;
		case 'q':
			cout << " +++++=EXIT=+++++ " << endl;
			goto exit;
			break;

		}
	}
	exit:getchar();
}
