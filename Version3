Shop.h
#include <iostream>
#include <string>
#include <fstream>
#include <cstring>
#pragma warning(disable : 4996)
using namespace std;

class Shop *shs;
class Shop1 *ss1;
class Shop2 *ss2;
class Shop3 *ss3;


class Shop
{
	string Publishing_house;//издательство
	int year;
	int numbers;//число страниц
	string photos;//наличие фотографий
	string cards;//наличие карты
	string binding;//переплет(твердый или мягкий)
	string format; //(А2-А4)
	string author;
	int sum;//кол-во
	//Shop *next;
	string name;

public:
	void Zap();//нужно убрать, лишняя функция
	Shop();
	Shop(int aa);
	void show();
	void sh_ware(char s);
	//void create(Shop &rr, char cc);
	/*void setNext(Shop *n)
	{
		next = n;
	}*/
	//virtual void find(Shop *n,string h) 
	//{
		//Shop1 ss1;
		/*setNext(&ss1);*/
	//	next->find(n,h);
	//};
	virtual void find(Shop &r, string h);
	
};
 



